<UserControl x:Class="Frism.UnoSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frism"
             mc:Ignorable="d" 
             d:DesignHeight="26" Width="240">
    <Grid>
        <Slider x:Name="slider"  Background="LightGray" Padding="2" Margin="3,3,0,0" VerticalAlignment="Top" ValueChanged="slider_ValueChanged"/>
    </Grid>
</UserControl>
