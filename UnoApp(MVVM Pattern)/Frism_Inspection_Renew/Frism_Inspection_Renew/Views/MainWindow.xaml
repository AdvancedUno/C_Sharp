<Window x:Class="Frism_Inspection_Renew.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels ="clr-namespace:Frism_Inspection_Renew.ViewModels"
        xmlns:views ="clr-namespace:Frism_Inspection_Renew.Views"
        xmlns:local="clr-namespace:Frism_Inspection_Renew"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:ScreenViewModel}">
                <views:MainView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ScreenViewModel}">
                <views:ScreenView/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
