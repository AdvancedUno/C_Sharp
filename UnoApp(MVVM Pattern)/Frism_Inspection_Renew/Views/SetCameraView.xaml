                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="0 0 0 10">
                        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">
                    ****************** 카메라를 선택해 주세요 ******************
                        </TextBlock>

                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>



                            </Grid.ColumnDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Grid.Column" Value="0"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="ComboBox">
                                    <Setter Property="Grid.Column" Value="1"/>
                                    <Setter Property="IsSynchronizedWithCurrentItem" Value="False"/>
                                    <Setter Property="Margin" Value="10,0,0,0"/>
                                </Style>
                            </Grid.Resources>

                            <TextBlock Grid.Row="1" Text="노출 시간:"  />
                            <TextBlock Grid.Row="2" Text="게인:"  />

                            <Slider x:Name="ExousreTimeSlider1" Grid.Row="1" Grid.Column="1"  Background="LightGray" Padding="2" Margin="3,3,0,0" VerticalAlignment="Top" 
                                    Value="{Binding ExposuretimeSliders[0].SliderValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                    Minimum="{Binding ExposuretimeSliders[0].SliderMinmum, UpdateSourceTrigger=PropertyChanged}"
                                    Maximum="{Binding ExposuretimeSliders[0].SliderMaximum, UpdateSourceTrigger=PropertyChanged}"
                                    TickFrequency="{Binding ExposuretimeSliders[0].SliderTickFrequency, UpdateSourceTrigger=PropertyChanged}"

                                />

                                    
                            <Slider x:Name="GainSlider1" Grid.Row="2" Grid.Column="1"  Background="LightGray" Padding="2" Margin="3,3,0,0" VerticalAlignment="Top" 
                                    Value="{Binding GainValueSliders[0].SliderValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Minimum="{Binding GainValueSliders[0].SliderMinmum, UpdateSourceTrigger=PropertyChanged}"
                                    Maximum="{Binding GainValueSliders[0].SliderMaximum, UpdateSourceTrigger=PropertyChanged}"
                                    TickFrequency="{Binding GainValueSliders[0].SliderTickFrequency, UpdateSourceTrigger=PropertyChanged}"

                                    />

                            <TextBox x:Name="ExposureText1" Text="{Binding ExposuretimeSliders[0].SliderValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1" Grid.Column="4"  DockPanel.Dock="Right" TextAlignment="Right"  Margin="10 0 10 0"/>
                            <TextBox x:Name="GainText1" Text="{Binding GainValueSliders[0].SliderValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="2" Grid.Column="4"  DockPanel.Dock="Right" TextAlignment="Right"  Margin="10 0 10 0"/>
                            
                        </Grid>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
                            <Button Content="학습모델 선택" Name="SetDNNButton1"  Margin="10,0,0,0" Command="{Binding SetDNNBtn}" CommandParameter="0"/>
                            <TextBlock x:Name="DNNPathTxt1" Margin="10 0 0 0"/>
                        </StackPanel>
                        <Image x:Name="image1" Grid.Row="3" Source="{Binding CameraImageSourceGroup[0],  UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left"  VerticalAlignment="Top" Height="390"/>


                    </StackPanel>
                </Grid>
            </StackPanel>

