<UserControl x:Class="Frism_Inspection_Renew.Views.SetCameraView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frism_Inspection_Renew.Views" xmlns:components="clr-namespace:Frism_Inspection_Renew.Components"
             mc:Ignorable="d"
        Height="1000" Width="1920" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <components:SideBarView Grid.Column="0" DataContext="{Binding SideBarViewModel}"/>
    <ScrollViewer Background="White" Padding="12,20,12,12" Grid.Column="1">
        <ScrollViewer.Resources>
            <DataTemplate x:Key="DisplayNameTemplate">
                <TextBlock Text="{Binding Path=DisplayName}" />
            </DataTemplate>
        </ScrollViewer.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <StackPanel Orientation="Horizontal">
                    <ComboBox
                        Name="GroupComboBox"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        ItemsSource="{Binding CameraInfos}"
                        SelectedItem="{Binding Path=SelectedCameraInfos, Mode=TwoWay}"
                        Width="400"/>
                    <Button Content="전체화면" Name="fullScreenBtn" Command="{Binding FullScreenModeBtn}"/>
                    <ComboBox Name ="CameraInfoBox"  Margin="10 0 10 0" 
                              VerticalAlignment="Center" 
                              Width="300"
                              ItemsSource="{Binding Path=SavedInfosList}"
                              SelectedItem="{Binding Path=RecipeID, Mode=TwoWay}"
                              />
                    <Button Content="전체 세팅" Name="SetAllBtn" Command="{Binding SetAllBtn}" Margin="0 0 5 0"/>
                    <Button Content="전체 시작" Name="StartAllBtn" Command="{Binding StartAllBtn}" Margin="0 0 5 0" IsEnabled="True"/>
                    <Button Content="삭제" Name="DeleteBtn" Command="{Binding DeleteRecipeBtn}" Margin="0 0 5 0" />
                    <Button Content="조명 설정" Name="SetLEDBtn" Command="{Binding SetLEDBtn}" />
                </StackPanel>
            </Grid>



            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 10 0 10">
                <Button Content="1번 카메라 설정" Command="{Binding SetCameraBtn}" CommandParameter="0" Height="30"/>
